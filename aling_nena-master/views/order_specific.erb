	<h2><%= "#{@products.name}" %></h2>
	<div>
	<label for="quantity">Quantity</label>
	<select method="POST" action="/order/result/<%= @products.id %>" name="quantity" style="color: black">
		<% @products.quantity.times do %>
			<option method="POST" action="/order/result/<%= @products.id %>" name="choice" style="color: black"><%= "#{@products.quantity}" %></option>
			<% @products.quantity = @products.quantity - 1 %>
		<% end %>
	</select>
	
	</div>
